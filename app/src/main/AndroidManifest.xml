<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.keepnotes">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ArchieveScreen"></activity>
        <activity android:name=".ReminderActivity" />
        <activity android:name=".TrashScreen" />
        <activity android:name=".MenuActivity" />
        <activity android:name=".ParticularNote" />
        <activity android:name=".AddingNotes" />
        <activity android:name=".NotesMainScreen" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".NotificationBroadcast" />
    </application>

</manifest>